

@model IEnumerable<IdentityUser>

@{
    ViewBag.Title = "All Users";
}

<div class="row mt-4">
    <div class="col-2"></div>
    <div class="col">
        <h1>All Users</h1>

        @if (Model.Any())
        {
            <a asp-action="CreateUser" asp-controller="Home"
               class="btn btn-crashBlue mb-3" style="width:auto">
                Add new user
            </a>

            foreach (var user in Model)
            {
                <div class="card mb-2">
                    <div class="card-header">
                        User Id : @user.Id
                    </div>
                    <div class="card-body m1">
                        <h5 class="card-title">@user.UserName</h5>
                        <div class="row">
                            <a asp-controller="Admin" asp-action="EditUser"
                               asp-route-id="@user.Id" class="btn btn-crashBlue mr-2">Edit</a>

                            <form onsubmit="confirmDelete(event)" method="post" asp-action="DeleteUser" asp-route-id="@user.Id">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>

                    </div>
                </div>
            }
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    No users created yet
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Use the button below to create a user
                    </h5>
                    <a class="btn btn-crashBlue" style="width:auto"
                       asp-controller="Home" asp-action="CreateUser">
                        Add new user
                    </a>
                </div>
            </div>
        }
        </div>
        <div class="col-2 mb-4"></div>
    </div>
