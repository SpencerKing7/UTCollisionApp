@{
    ViewData["Title"] = "Admin Home";
}
@inject SignInManager<IdentityUser> signInManager;
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

@model IEnumerable<Crash>
<h1 class="text-center display-1 font-weight-bold">Welcome, @User.Identity.Name!</h1>
<ul>
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Manage
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item" asp-controller="Admin"
               asp-action="ListUsers">Users</a>
            <a class="dropdown-item" asp-controller="Admin"
               asp-action="ListRoles">Roles</a>
        </div>
    </li>
</ul>
<br />
<br />
<br />

<div class="row">
    <div class="col-1"></div>
    <div class="col-5 text-center border-right">
        <p class="display-4">Add a car crash here.</p>
        <br /><br /><br /><br />
        <a class="btn btn-lg btn-crashBlue btn-outline-crashBlue text-white" asp-controller="Admin" asp-action="AddCrashForm">Add Crash</a>
        <br /><br /><br /><br />
    </div>

    <div class="col-5 text-center">
        <p class="display-4">Search, Edit, or Delete a car crash here.</p>
        <br />
        <a class="btn btn-lg btn-crashBlue btn-outline-crashBlue text-white" asp-controller="Admin" asp-action="CrashTable">Search, Edit, Delete</a>
        <br /><br /><br /><br />
    </div>
    <div class="col-1"></div>
</div>

<br />
<br />
<br />