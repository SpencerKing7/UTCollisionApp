@{
    ViewData["Title"] = "Delete Crash";
}

@model Crash

<div class="text-center">
    <h2>Confirm Deletion</h2>
    <h3>Are you sure you want to delete the crash that happened on @Model.CRASH_DATETIME with Crash Number @Model.CRASH_ID?</h3>

    <form method="post" asp-controller="Admin" asp-action="DeleteCrash">
        <button type="submit" class="btn btn-lg btn-crashBlue">Delete</button>
        <a asp-controller="Admin" asp-action="CrashTable" class="btn btn-lg btn-crashLightGrey font-weight-bold">Cancel</a>

        <input type="hidden" asp-for="CRASH_ID" />
    </form>
</div>
