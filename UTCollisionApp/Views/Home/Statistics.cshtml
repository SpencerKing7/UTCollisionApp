@* Stat Summary/Picture Carousel/Contact *@
<div class="row crashDarkGrey font-weight-bold p-3">
    <div class="col-3">
        <div class="card text-center m-3 p-3">
            <h4 class="text-center"><b>2019 Stats</b></h4>
            <p class="bg-danger text-white m-2 p-2 mb-2 rounded-pill">Total Deaths: @ViewBag.Deaths</p>
            <p class="bg-warning text-white m-2 p-2 mb-2 rounded-pill">Total Injuries: @ViewBag.Injuries</p>
            <p class="bg-success text-white m-2 p-2 mb-2 rounded-pill">Total Accidents: @ViewBag.Accidents</p>
        </div>
        <div class="card m-3 text-center crashTextGrey pt-2">
            <h4 class="text-center" id="stats">The crash statistics below are provided to heighten awareness about traffic safety issues.</h4>
            <p class="p-1 pt-2"style="font-size:25px;">Those who want to be more involed or have any questions should contact Barbra Freeman for additional information.</p>
        </div>
    </div>

    <div class="col-6">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/img/crash4.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img/picture1.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img/picture2.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="col-3">
        <div class="text-center m-3">

            <a class="p-2 text-white btn btn-lg btn-crashBlue btn-block" asp-action="Statistics">Statistics</a><br />
            <a class="p-2 text-white btn btn-lg btn-crashBlue btn-block" asp-controller="Predictor" asp-action="SeverityCalc">Severvity Calculator</a><br />
            <a class="p-2 text-white btn btn-lg btn-crashBlue btn-block" asp-controller="Predictor" asp-action="CrashLocator">Crash Locator</a><br />
            <a class="p-2 text-white btn btn-lg btn-crashBlue btn-block" href="#contact">Contact Us</a><br />
        </div>

        <div class="card m-3 crashTextGrey pt-2">
            <h4 class="text-center" id="contact">Contact Barbra Freeman for additional information about the Traffic Records Program:</h4>
            <br />
            <p class="text-center" style="font-size:20px;"><b>Phone:</b><br />(801) 783-7250</p>
            <p class="text-center" style="font-size:20px;"><b>Email:</b><br /><a  class="crashTextGrey"  href="mailto:befreeman@utah.gov" target="_blank">bafreeman@utah.gov</a></p>
        </div>
    </div>
</div>

<div class="navbar navdark"></div>

